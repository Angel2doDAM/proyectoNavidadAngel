<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/gestionpartes</property>
        <property name="connection.username">root</property>
        <property name="connection.password">toor</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="application.proyectonavidad.Model.Alumnos"/>
        <mapping class="application.proyectonavidad.Model.Grupos"/>
        <mapping class="application.proyectonavidad.Model.Partes_incidencia"/>
        <mapping class="application.proyectonavidad.Model.Profesores"/>
        <mapping class="application.proyectonavidad.Model.Puntuacion_partes"/>
    </session-factory>
</hibernate-configuration>
